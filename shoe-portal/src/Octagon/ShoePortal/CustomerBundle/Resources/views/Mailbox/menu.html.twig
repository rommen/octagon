<div id="mailbox_menu" class="left">      
    <div class="list-group">
        <span style="color:grey;font-size:12pt;margin-left:8px;">Messages</span>
        
        {#  Compose      #}
        <a class="list-group-item" href="{{path('_send_mail')}}">
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Compose
        </a>
        {#  Inbox      #}
        {%if app.request.attributes.get('_route') == '_inbox'%}
            <a class="list-group-item active" href="{{path('_inbox')}}">
                <span class="glyphicon glyphicon-envelope"></span>
                &nbsp;Inbox
                {{ render(controller('CustomerBundle:Mailbox:unreadCountByUser', {'userId': app.user.idUserHash})) }}
            </a>
        {%else%}
            <a class="list-group-item" href="{{path('_inbox')}}">
                <span class="glyphicon glyphicon-envelope"></span>
                &nbsp;Inbox
                {{ render(controller('CustomerBundle:Mailbox:unreadCountByUser', {'userId': app.user.idUserHash})) }}
            </a>
        {%endif%}
        
        {#  Outbox      #}
        {%if app.request.attributes.get('_route') == '_outbox' %}
            <a class="list-group-item active" href="{{path('_outbox')}}">
                <span class="glyphicon glyphicon-arrow-right"></span>&nbsp;Sent Messages
            </a>
        {%else%}
            <a class="list-group-item" href="{{path('_outbox')}}">
                <span class="glyphicon glyphicon-arrow-right"></span>&nbsp;Sent Messages
            </a>
        {%endif%}
    </div>
</div>
