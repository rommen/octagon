{% extends "index.html.twig" %}
{% block title %}Shoes{% endblock%}
{% block content %}
    <script>
        navigation('nav_shoes');
    </script> 

    <div class="container-fluid">        
        <div class="col-lg-12">

            <div class="col-lg-4">
                {%if shoe != null %}
                    <img src="{{ asset('images/uploads/')}}{{shoe.fullFileName}}"  onerror="imgError(this);" alt="No shoe image"/>                                

                {%else%}
                    <a>image cannot be loaded</a>
                {%endif%}
            </div>
            <div class="col-lg-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{shoe.name}} </td>
                        </tr>
                        <tr>
                            <th>Color</th>
                            <td>{{shoe.color}}</td>
                        </tr>
                        <tr>
                            <th>Size</th>
                            <td>{{shoe.size}}</td>
                        </tr>  
                        <tr>
                            <th>Description</th>
                            <td>{{shoe.text}}</td>
                        </tr>
                        <tr>
                            <th>Brand</th>
                            <td>{{shoe.brand}}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{shoe.price}} â‚¬</td>
                        </tr>
                        <tr>
                            <th>Sport star</th>
                            <td>{{shoe.sportstar}}</td>
                        </tr>
                        <tr>
                            <th>Year</th>
                            <td>{{shoe.year}}</td>
                        </tr>
                        <tr>
                            <th>Edition</th>
                            <td>{{shoe.edition}}</td>
                        </tr>
                        <tr>
                            <th>Owner</th>
                            <td><a href="/users/view?id={{shoe.idOwner.idUserHash}}">{{shoe.idOwner.username}}</a></td>
                        </tr>

                    </tbody>
                </table>
                <br/>

            </div>
        </div>
    </div>
    <div>

        {%if app.user != null%}
            {%if shoe.idOwner.idUser == app.user.idUser %}
                <a href="/shoes/edit?id={{shoe.idShoeHash}}">
                    <button type="button" class="btn btn-primary">
                        Edit
                    </button>
                </a>
            {%endif %}
            <a href="/shoes/add">
                <button type="button" class="btn btn-primary">
                    {%if shoe.idOwner.idUser == app.user.idUser %}
                        Add more
                    {%else%}
                        Add own shoe
                    {%endif%}
                </button>
            </a>
            {%if shoe.idOwner.idUser == app.user.idUser %}
                <a href="/shoes/delete?id={{shoe.idShoeHash}}">
                    <button type="button" class="btn btn-primary">
                        Delete
                    </button>
                </a>
            {%endif %}
        {%endif%}
    </div>

{% endblock %}  


