<style>
    *, *:before, *:after {box-sizing:  border-box !important;}


    .row {
        -moz-column-width: 18em;
        -webkit-column-width: 18em;
        -moz-column-gap: 1em;
        -webkit-column-gap:1em; 

    }

    .item {
        display: inline-block;
        padding:  .25rem;
        width:  100%; 
    }

    .well {
        position:relative;
        display: block;
    }

    #shoes{
        width: 80%;
        margin-left: 50px;
    }
    .shoeName{
        color: #428bca;
    }
    .shoeYear{
        color:grey;
    }
    .shoePrice{
        color: darkred;
    }
</style>
<div id="shoes" class="left">
    <div >        

        {% for nf in newsfeeds %}
            {%if app.user != null %}
                <a href="/newsfeed/add?id={{ nf.idNewsfeedHash }}">
                    <button type="button" class="btn btn-primary">Add</button>
                </a>
            {%endif%} 
            <div class="panel panel-default">
                <div class="panel-heading">{{nf.tile}}</div>
                <div class="panel-body">
                    <div class>{{nf.idNewsfeedHash}}</div>    
                    <div class>{{nf.text}}</div> 
                </div>
                <div class="panel-footer">
                   
                    <a href="/users/view?id={{nf.idOwner.idUserHash}}">{{nf.idOwner.username}}</a>
                    <div>{{nf.date|date('d.m.Y')}}</div>
                    <div>
                        {%if nf.idOwner.idUser == app.user.idUser %}
                            <a href="/newsfeed/edit?id={{ nf.idNewsfeedHash }}">
                                <button type="button" class="btn btn-primary">Edit</button>
                            </a>
                            <a href="/newsfeed/delete?id={{ nf.idNewsfeedHash }}">
                                <button type="button" class="btn btn-primary">Delete</button>
                            </a>
                        {%endif%}
                    </div>

                </div>
            </div>
        {% endfor %}        
    </div>
</div>