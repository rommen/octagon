{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Newsfeed list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Tile</th>
                <th>Text</th>
                <th>Date</th>
                <th>Idnewsfeed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_newsfeed_show', { 'id': entity.idNewsfeed }) }}">{{ entity.tile }}</a></td>
                <td>{{ entity.text }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.idNewsfeed }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_newsfeed_show', { 'id': entity.idNewsfeed }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_newsfeed_edit', { 'id': entity.idNewsfeed }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_newsfeed_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
