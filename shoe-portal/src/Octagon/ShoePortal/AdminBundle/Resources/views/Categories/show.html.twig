{% extends "AdminBundle:Default:index_admin.html.twig" %}
{% block title %}Categories{% endblock%}
{% block content %}
    <script>
        navigation('nav_categories');
    </script> 
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.idCategories }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ entity.level }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group" role="group">
        <button type="button" class="btn btn-primary"> 
            <a href="{{ path('admin_categories') }}">
                Back to the list
            </a>
        </button>
        <button type="button" class="btn btn-primary">
            <a href="{{ path('admin_categories_edit', { 'id': entity.idCategories }) }}">
                Edit
            </a>
        </button>
        <div>
            {{ form(delete_form) }}
        </div>
    </div>


{% endblock %}
