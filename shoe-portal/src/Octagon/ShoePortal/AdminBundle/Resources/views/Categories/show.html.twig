{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Categories</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ entity.level }}</td>
            </tr>
            <tr>
                <th>Idcategories</th>
                <td>{{ entity.idCategories }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_categories') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_categories_edit', { 'id': entity.idCategories }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
