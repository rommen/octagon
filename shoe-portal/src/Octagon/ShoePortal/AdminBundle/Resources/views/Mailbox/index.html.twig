{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Mailbox list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Text</th>
                <th>Date</th>
                <th>Read</th>
                <th>Deletebysender</th>
                <th>Deletebyreceiver</th>
                <th>Idmailbox</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_mailbox_show', { 'id': entity.idMailbox }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.text }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.read }}</td>
                <td>{{ entity.deleteBySender }}</td>
                <td>{{ entity.deleteByReceiver }}</td>
                <td>{{ entity.idMailbox }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_mailbox_show', { 'id': entity.idMailbox }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_mailbox_edit', { 'id': entity.idMailbox }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_mailbox_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
