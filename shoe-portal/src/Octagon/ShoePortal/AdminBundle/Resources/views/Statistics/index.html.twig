{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Statistics list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Tile</th>
                <th>Text</th>
                <th>Idstatistics</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_statistics_show', { 'id': entity.idStatistics }) }}">{{ entity.tile }}</a></td>
                <td>{{ entity.text }}</td>
                <td>{{ entity.idStatistics }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_statistics_show', { 'id': entity.idStatistics }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_statistics_edit', { 'id': entity.idStatistics }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_statistics_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
