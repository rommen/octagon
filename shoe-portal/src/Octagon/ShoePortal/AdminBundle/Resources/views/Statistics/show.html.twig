{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Statistics</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Tile</th>
                <td>{{ entity.tile }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ entity.text }}</td>
            </tr>
            <tr>
                <th>Idstatistics</th>
                <td>{{ entity.idStatistics }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_statistics') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_statistics_edit', { 'id': entity.idStatistics }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
