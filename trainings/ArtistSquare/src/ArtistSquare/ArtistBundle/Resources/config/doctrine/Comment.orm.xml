<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ArtistSquare\ArtistBundle\Entity\Comment" table="Comment">
    <indexes>
      <index name="user_idx" columns="owner"/>
      <index name="pic_idx" columns="picture"/>
      <index name="fk_Comment_Article1_idx" columns="article"/>
      <index name="fk_Comment_Gallery1_idx" columns="gallery"/>
      <index name="fk_Comment_User1_idx" columns="deleter"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="text" type="string" column="text" length="250" nullable="false"/>
    <field name="create" type="datetime" column="create" nullable="false"/>
    <field name="deleted" type="datetime" column="deleted" nullable="true"/>
    <many-to-one field="deleter" target-entity="User">
      <join-columns>
        <join-column name="deleter" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="gallery" target-entity="Gallery">
      <join-columns>
        <join-column name="gallery" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="article" target-entity="Article">
      <join-columns>
        <join-column name="article" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="owner" target-entity="User">
      <join-columns>
        <join-column name="owner" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="picture" target-entity="Picture">
      <join-columns>
        <join-column name="picture" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
