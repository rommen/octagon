<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ArtistSquare\ArtistBundle\Entity\User" table="User">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="50" nullable="false"/>
    <field name="password" type="string" column="password" length="64" nullable="false"/>
    <field name="nickname" type="string" column="nickname" length="50" nullable="false"/>
    <field name="admin" type="boolean" column="admin" nullable="false"/>
    <field name="salt" type="string" column="salt" length="64" nullable="false"/>
    <field name="phrase" type="string" column="phrase" length="150" nullable="true"/>
    <field name="photo" type="blob" column="photo" nullable="true"/>
    <field name="deleted" type="datetime" column="deleted" nullable="true"/>
    <field name="blockedUntil" type="datetime" column="blocked_until" nullable="true"/>
    <field name="blockReason" type="string" column="block_reason" length="45" nullable="true"/>
  </entity>
</doctrine-mapping>
